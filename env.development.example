###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=3000
SERVICE_NAME=tmp-files-microservice

###### Timezone
# Force application timezone (affects pretty logs)
TZ=UTC

###### API prefix
API_BASE_PATH=api
API_VERSION=v1

###### Logging
# Development uses more verbose logging
LOG_LEVEL=debug

###### Storage service
# Base directory for file storage and metadata
STORAGE_DIR=./test-data
# Max upload size in megabytes
MAX_FILE_SIZE_MB=100
# JSON array of allowed MIME types, empty means allow all
ALLOWED_MIME_TYPES=
# Enable or disable deduplication (by SHA-256 hash)
ENABLE_DEDUPLICATION=true
# Max TTL in minutes (default 7 days)
MAX_TTL_MIN=10080
# Cleanup schedule (every 10 minutes by default)
CLEANUP_CRON=0 */10 * * * *
