{
  "type": "module",
  "name": "tmp-files-microservice",
  "version": "1.2.0",
  "description": "Temporary files microservice",
  "main": "dist/src/entry-node.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/entry-node.js",
    "start:dev": "NODE_ENV=development node --env-file=.env.development --import tsx --watch src/entry-node.ts",
    "start:prod": "NODE_ENV=production node dist/src/entry-node.js",
    "dev:wrangler": "wrangler dev src/entry-cloudflare.ts",
    "deploy:wrangler": "wrangler deploy src/entry-cloudflare.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects unit",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:cov": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:debug": "NODE_OPTIONS='--experimental-vm-modules' node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:unit:debug": "NODE_OPTIONS='--experimental-vm-modules' node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --selectProjects unit --detectOpenHandles",
    "test:e2e:debug": "NODE_OPTIONS='--experimental-vm-modules' node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --selectProjects e2e --detectOpenHandles",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects e2e",
    "migrate:redis": "echo 'Removed: legacy NestJS migration is no longer supported' && exit 1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.984.0",
    "@aws-sdk/lib-storage": "^3.984.0",
    "@hono/node-server": "^1.19.0",
    "@noble/hashes": "^1.8.0",
    "busboy": "^1.6.0",
    "dayjs": "^1.11.19",
    "file-type": "^21.3.0",
    "hono": "^4.9.0",
    "ioredis": "^5.9.2",
    "pino": "^10.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260206.0",
    "@eslint/eslintrc": "^3.3.3",
    "@jest/globals": "^30.2.0",
    "@types/busboy": "^1.5.4",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^3.114.0"
  },
  "author": "Ivan K",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.28.2"
}