{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*",
    "test/**/*",
    "eslint.config.js",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  }
}