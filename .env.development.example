###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=8080
# BASE_PATH=
# Base URL for downloadUrl in responses (e.g. https://files.example.com). If empty, downloadUrl is relative.
DOWNLOAD_BASE_URL=
LOG_LEVEL=warn
# Force application timezone (affects pretty logs)
# Enable web interface at root path (true|false)
ENABLE_UI=false
TZ=UTC

###### Authentication
# BASIC AUTH
# If specified, Basic authentication is enabled:
# - UI routes require Basic auth
# - API routes accept Basic auth as one of allowed methods
# AUTH_BASIC_USER=
# AUTH_BASIC_PASS=

# BEARER AUTH
# Comma-separated list of allowed Bearer tokens
# If specified, API requests with 'Authorization: Bearer <token>' matching any of these will be allowed
# AUTH_BEARER_TOKENS=

# Behavior:
# - If at least one auth method is configured (Basic or Bearer), all API routes require auth
#   except file download: GET /{BASE_PATH}/api/v1/download/:id
# - If neither Basic nor Bearer is configured, authentication is not enforced

###### Storage service
# Max upload size in megabytes
MAX_FILE_SIZE_MB=100
# Comma-separated list of allowed MIME types (e.g. image/png,image/jpeg). Empty means allow all
ALLOWED_MIME_TYPES=

# Max TTL in minutes (default 31 days)
MAX_TTL_MIN=44640


###### S3 Storage (e.g. Garage, Minio, AWS R2)
S3_ENDPOINT=http://localhost:3900
S3_REGION=garage
S3_BUCKET=tmp-files-microservice
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=true
