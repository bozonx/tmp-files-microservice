###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=8080
# BASE_PATH=
# Base URL for downloadUrl in responses (e.g. https://files.example.com). If empty, downloadUrl is relative.
DOWNLOAD_BASE_URL=
LOG_LEVEL=warn
# Force application timezone (affects pretty logs)
TZ=UTC

###### Storage service
# REQUIRED: Base directory for file storage and metadata
STORAGE_DIR=./test-data
# Max upload size in megabytes
MAX_FILE_SIZE_MB=100
# Comma-separated list of allowed MIME types (e.g. image/png,image/jpeg). Empty means allow all
ALLOWED_MIME_TYPES=
# Enable or disable deduplication (by SHA-256 hash)
ENABLE_DEDUPLICATION=true
# Max TTL in minutes (default 31 days)
MAX_TTL_MIN=44640
# Redis (Metadata storage)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=tmp_files:

# Cleanup interval in minutes (set 0 to disable, default 10)
CLEANUP_INTERVAL_MINS=10

###### S3 Storage (e.g. Garage, Minio, AWS R2)
S3_ENDPOINT=http://localhost:3900
S3_REGION=garage
S3_BUCKET=tmp-files
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=true
